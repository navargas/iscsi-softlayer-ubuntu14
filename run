#!/bin/bash

set -x

# Initialize state
URL='https://raw.githubusercontent.com/navargas/iscsi-softlayer-ubuntu14/master/iscsid.conf'
MD5='b1519580ab38966bf89d90ad0a582f90'
USERNAME=$1
PASSWORD=$2
DISCOVERY=$3
IQN=$4
MOUNTPOINT=$5
CONF="./iscsid.conf"
DESTINATION="/etc/iscsi/iscsid.conf"
INITIATOR="/etc/iscsi/initiatorname.iscsi"

# Validate command line arguments
if [ -z $USERNAME ] || [ -z $PASSWORD ] || [ -z $DISCOVERY ] || [ -z $IQN ] || [ -z $MOUNTPOINT ]; then
  echo 'Usage: read the script **before** piping into bash, then'
  echo 'curl https://.../run | bash -s "username" "password" "discovery address" "host IQN" "mountpoint"'
  exit 1
fi

# Download configuration file template
curl $URL > $CONF
if [ $? -ne 0 ]; then
  echo 'Unable to download config file'
  exit 2
fi

# Make sure we are working from the full, correct file
filecheck=$(cat $CONF | md5sum)
if [ $filecheck != $MD5 ]; then
  echo There was a problem downloading the config file
  exit 3
fi

cat $CONF | sed 's|%%USERNAME%%|'$USERNAME'|g' | sed 's|%%PASSWORD%%|'$PASSWORD'|g' > "$CONF".tmp

if [ -f $DESTINATION ]; then
  mv $DESTINATION "$DESTINATION".bak
fi

mv "$CONF".tmp $DESTINATION

if [ $? -eq 0 ]; then
  rm -f "$CONF".tmp
  rm -f $CONF
  echo $DESTINATION written successfully
else
  echo Unable to write $DESTINATION
  exit 4
fi

mv $INITIATOR "$INITIATOR".bak
echo "## Generated by navargas/iscsi-softlayer-ubuntu14" > $INITIATOR
echo "## Original moved to $INITIATOR.bak" >> $INITIATOR
echo 'InitiatorName='"$IQN" >> $INITIATOR

echo Initator: $INITIATOR
cat $INITIATOR
echo

echo Enabling iSCSI
apt-get install -y open-iscsi
/etc/init.d/open-iscsi restart
iscsiadm -m discovery -t sendtargets -p $DISCOVERY
iscsiadm -m node -L automatic
iscsiadm -m node --login

echo Mounting device...
mkdir $MOUNTPOINT
# wait for /dev/disk/by-path/ to be populated
sleep 1
dev_attempts=0
while [ $dev_attempts -lt 30 ]; do
  dev_attempts=$[ $dev_attempts + 1 ]
  echo Attempt $dev_attempts
  DEVNAME=$(ls /dev/disk/by-path/ | grep $DISCOVERY | grep 'part1' | head -n 1)
  if [ ! -z $DEVNAME ]; then
    echo $DEVNAME
    break
  fi
  sleep 2
done
if [ -z $DEVNAME ]; then
  echo Unable to find device
  exit 6
fi
DEV=/dev/disk/by-path/$DEVNAME
mount $DEV $MOUNTPOINT
